<%= link_to("<< Back to list", {:action => 'index'}, :class => 'back-link') %>

<%= form_for @note do |f| %>
  <p><%= f.label(:title) %>
  <%= f.text_field(:title) %></p>
  <p><%= f.label(:text) %>
  <%= f.text_field(:text) %></p>
  <p><%= f.label(:user) %>
  <%= f.text_field(:user) %></p>
  <p><%= submit_tag("Create note") %>
  <%= submit_tag("Update note") %></p>
<% end %>
